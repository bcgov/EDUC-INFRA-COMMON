pipeline {
	agent any

    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        stage ('Start DigitalID API Pipline') {
            steps {
                echo 'Starting pipeline...'
                script{
                    openshift.withCluster(){
                        openshift.withProject(){
                            try{
                                def bcApi = openshift.process('-f', 'openshift/pipeline/master-pipeline/digitalid-api-jenkinsfile.bc.yaml')
                                openshift.apply(bcApi).narrow('bc').startBuild()
                            } catch(e) {
                                echo "DigitalID API Pipeline failed to start"
                                throw e
                            }
                        }
                    }
                }
            }
        }
        stage ('Start Student API Pipline') {
            steps {
                echo 'Starting pipeline...'
                script{
                    openshift.withCluster(){
                        openshift.withProject(){
                            try{
                                def bcApi = openshift.process('-f', 'openshift/pipeline/master-pipeline/student-api-jenkinsfile.bc.yaml')
                                openshift.apply(bcApi).narrow('bc').startBuild()
                            } catch(e) {
                                echo "Student API Pipeline failed to start"
                                throw e
                            }
                        }
                    }
                }
            }
        }
        stage ('Start PEN Request Pipeline'){
            steps {
                echo 'Starting pipeline...'
                script{
                    openshift.withCluster(){
                        openshift.withProject(){
                            try{
				def bcRequest = openshift.process('-f', 'openshift/pipeline/master-pipeline/request-jenkinsfile.bc.yaml')
				openshift.apply(bcRequest).narrow('bc').startBuild()
                            } catch(e) {
                                echo "PEN Request Pipeline failed to start"
                                throw e
                            }
                        }
                    }
                }
            }
        }
    }
}
